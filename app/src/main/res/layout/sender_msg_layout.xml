<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/senderMsg"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="?attr/msgTextColor"
        tools:text="This is your messsage that will be shown here"
        android:background="@drawable/bg_sender_msg"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_like"
        android:id="@+id/sender_reactions"
        app:layout_constraintEnd_toStartOf="@+id/senderMsg"
        app:layout_constraintStart_toStartOf="@+id/senderMsg"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>